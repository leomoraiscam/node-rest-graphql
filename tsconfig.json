{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs", 
    "outDir": "./dist",                          
    "baseUrl": "./src",                             
    "allowJs": true,                                
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,       
    "resolveJsonModule": true
  }
}
